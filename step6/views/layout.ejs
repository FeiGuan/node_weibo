        	margin-top: 5px;
    	}

	@media (max-width: 767px) {
    		ul.timeline:before {
        		left: 40px;
    		}	

    		ul.timeline > li > .timeline-panel {
        		width: calc(100% - 90px);
        		width: -moz-calc(100% - 90px);
        		width: -webkit-calc(100% - 90px);
    		}

    		ul.timeline > li > .timeline-badge {
        		left: 15px;
        		margin-left: 0;
        		top: 16px;
    		}

    		ul.timeline > li > .timeline-panel {
